{
  "name": "@jyoti/swisseph",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "main": "./lib/index.mjs",
  "types": "./lib/index.d.mts",
  "exports": {
    ".": {
      "types": "./lib/index.d.mts",
      "import": "./lib/index.mjs"
    },
    "./raw": {
      "types": "./lib/raw.d.mts",
      "import": "./lib/raw.mjs"
    }
  },
  "files": [
    "src",
    "lib"
  ],
  "scripts": {
    "build:wasm": "emmake make -f Makefile.wasm",
    "build:ts": "tsdown",
    "build": "bun run build:wasm && bun run build:ts",
    "clean": "rm -rf lib && make -f Makefile.wasm clean",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "astrology",
    "jyotish",
    "vedic",
    "ephemeris",
    "swisseph",
    "wasm",
    "webassembly"
  ],
  "license": "AGPL-3.0",
  "devDependencies": {
    "tsdown": "^0.19.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "bun-types": "^1.3.5"
  }
}